{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="col-12">
        {{ form_start(form) }}

        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button class="btn btn-primary" type="submit">Sign up!</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
